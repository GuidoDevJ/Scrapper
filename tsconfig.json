{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "rootDir": "./src",
    "plugins": [
      {
        "name": "esm-resolve",
        "resolveDotJS": true
      }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
